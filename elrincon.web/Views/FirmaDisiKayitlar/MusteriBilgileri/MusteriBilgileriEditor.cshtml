    .open-modal .window {
        max-width: 65% !important; 
    }

    #rezervasyon_editor_input_aciklama {
        height: 180px !important;
    }

</style>
<div class="row el_row" style="margin-top: 30px">
    <div class="cell-12" align="center">
        <h6>Müşteri Ekle</h6>
    </div>
    <div class="cell-6">
        <div class="cell">
            <div class="row">
                <div class="input-caption">
