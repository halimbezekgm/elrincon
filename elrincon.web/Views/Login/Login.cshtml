@{
    ViewBag.Title = "Login";
    Layout = "~/Views/_Layout.cshtml";
}

<style>
    .login-form-div {
        position: absolute;
        display: block;
        height: 100%;
        width: 100%;
    }

    .login-form {
        width: 350px;
        height: auto;
        top: 50%;
        margin-top: -160px;
    }
    .logo-form {
        top: 32%;
        margin-top: -160px;
        text-align-last: center;
    }
    .login-form {
        width: 350px;
        height: auto;
        top: 65%;
        margin-top: -160px;
    }
</style>

<div class=" login-form-div bg-brandColor2">
    
    <div class=" logo-form p-6 mx-auto bd-default win-shadow">
        <img width="425" height="81" alt="" data-sizes="(max-width: 425px) 100vw, 425px" class="attachment-full size-full lazyloaded lazy-loaded"
             src="~/Content/images/loginLogo.png" sizes="(max-width: 425px) 100vw, 425px">
    </div>

    <form class="login-form bg-white p-6 mx-auto border bd-default win-shadow"
          data-role="validator"
          action="/Login/GirisYap"
          data-clear-invalid="2000"
          data-on-error-form="invalidForm"
          data-on-validate-form="validateForm">
        
        <h2 class="text-light" align="center">Giriş Ekranı</h2>
        <hr class="thin mt-4 mb-4 bg-white">
        <div class="form-group">
            <input type="text" data-role="input" data-prepend="<span class='mif-envelop'>"
                   placeholder="Kullanıcı Adı" data-validate="required" name="user">
        </div>
        
        <div class="form-group">
            <input type="password" data-role="input" data-prepend="<span class='mif-key'>"
                   placeholder="Şifre" data-validate="required minlength=6" name="password">
        </div>
        <div class="form-group mt-10" align="center">
            @*<input type="checkbox" data-role="checkbox" data-caption="Remember me" >*@
            <button class="button el-action-button">Giriş Yap</button>
        </div>
    </form>
</div>
<script src="https://cdn.metroui.org.ua/v4/js/metro.min.js"></script>
<script> 
    function validateForm(){
        $(".login-form").animate({
            opacity: 0
        });
    }
</script>

