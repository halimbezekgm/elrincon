@using elrincon.web.Models.SharedModel
@using elrincon.web.Models.Yonetim.HesapPlani
@using elrincon.web.Models.Yonetim.HesapPlani
@model List<elrincon.web.Models.Yonetim.HesapPlani.HesapPlaniModel>
@{
    ViewBag.Title = "EmptyView";
    Layout = "~/Views/_Layout.cshtml";
}

<style>
    img {
        display: none;
        height: 16px;
    }

    .showAdd {
        height: 18px;
        text-align: right;
    }

    .addNew {
        height: 41px;
        margin-bottom: 9px;
    }

    .showAdd:hover > img {
        display: inline !important;
    }

    .duzenle {
        padding: 0;
    }
    .parentDiv {
        font-size: 12px !important;
        overflow-y: auto;
        height: calc(100% - 96px);
        width: 585px;
    }
</style>
<script src="~/Scripts/jquery-3.5.1.min.js"></script>

<div class="parentDiv" style="">
    <div class="row el_row" style="background-color: #abb6bb;margin-top: 6px;font-weight: bold;">
        <div class="cell-6">MUHASEBE BAĞLANTI HESAP TANIMLAMA</div>
        <div class="cell-2">BİLANÇO +</div>
        <div class="cell-2">BİLANÇO -</div>
        <div class="cell-2">GELİR TABLOSU</div>
    </div>
    @{
        foreach (HesapPlaniModel kmodel in Model)
        {
            <div data-id="@kmodel.Id" class="el_row row parentNewKasaKod">
                <div id="" class="cell-6">
                    @{Html.RenderPartial("ElInput", kmodel.MuhasebeKasaKodu);} 
                </div>
                <div id="" class="cell-2">
                    <input value="" type="checkbox" data-role="switch" data-material="true">
                </div>
                <div id="" class="cell-2">
                    <input value="" type="checkbox" data-role="switch" data-material="true">
                </div>
                <div id="" class="cell-2">
                    <input value="" type="checkbox" data-role="switch" data-material="true">
                </div>
            </div> 
        }
    }
 
</div>
<div class="cell" align="right" style="top: 30%">
    <div class="row" style=" width: fit-content;">
        <button class="el-action-button save_muhasebe_tanmlari_data"> Analiz Et  </button>
    </div>
</div>